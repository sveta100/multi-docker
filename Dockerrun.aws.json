{
    "AWSEBDockerrunVersion": "2",
    "containerDefinitions": [
        {
            "name": "client",
            "image": "svetab/multi-client",
            "hostname": "client",
            "essential": false            
        },
        {
            "name": "server",
            "image": "svetab/multi-server",
            "hostname": "api",
            "essential": false            
        },
        {
            "name": "worker",
            "image": "svetab/multi-worker",
            "hostname": "worker",
            "essential": false            
        },
        {
            "name": "nginx",
            "image": "svetab/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]           
        }

    ]
}